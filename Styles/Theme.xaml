<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="http://schemas.fontawesome.io/icons/">

    <Style x:Key="NaviButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="48" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="NaviIcon" TargetType="fa:ImageAwesome">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="#333" />
    </Style>

    <Style x:Key="SettingToolbarStackPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Height" Value="48" />
        <Setter Property="Margin" Value="15,0,15,0" />
        <!--<Setter Property="Background" Value="#F2F2F2" />-->
    </Style>
    <Style x:Key="SettingLabel" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="15,0,15,0" />
        <Setter Property="FontSize" Value="16" />
        <!--<Setter Property="Background" Value="#F2F2F2" />-->
    </Style>

    <Style x:Key="ToolbarStackPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Height" Value="48" />
        <Setter Property="Margin" Value="15,0,15,0" />
        <Setter Property="Background" Value="#F2F2F2" />
    </Style>

    <Style x:Key="ToolbarLabel" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>
    <Style x:Key="ToolbarSeperate" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>

    <Style x:Key="ToolbarTextBox" TargetType="TextBox">
        <Setter Property="VerticalAlignment" Value="Center" />
        <!--<Setter Property="FontSize" Value="14" />-->
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="Width" Value="120" />
        <Setter Property="Height" Value="24" />
        <Setter Property="VerticalContentAlignment" Value="Center" />

    </Style>

    <Style x:Key="ToolbarButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <!--<Setter Property="Width" Value="100" />-->
        <Setter Property="Height" Value="48" />
        <Setter Property="Padding" Value="10,0,10,0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <!--<Setter Property="Margin" Value="5,0,0,0" />-->
    </Style>
    <Style x:Key="ToolbarButtonStackPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="ToolbarButtonIcon" TargetType="fa:ImageAwesome">
        <Setter Property="Foreground" Value="#333" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>

    <Style x:Key="ToolbarButtonText" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
    </Style>


    <Style x:Key="DataGrid" TargetType="DataGrid">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="15,5,15,0" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>
